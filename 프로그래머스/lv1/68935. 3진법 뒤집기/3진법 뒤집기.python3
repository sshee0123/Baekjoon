def solution(n):
    answer = 0
    tmp = []
    
    while True:
        tmp.append(n % 3)
        n //= 3
        if n == 0:
            break       
            
    idx = 0  
    for t in tmp[::-1]:
        if t == 0:
            idx += 1
            continue
        answer += t*(3**idx)
        idx += 1
        
    return answer